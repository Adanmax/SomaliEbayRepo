@model IEnumerable<SomaliEbay.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid " style="margin:20px">
    <div class="row">

        <div class="col-md-12">


            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/image/Banner1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/image/Bannwe2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/image/Banner3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        @foreach (var product in Model)
        {

            <hr />

            <div class="col-md-4 text-center" style="max-height:300px">
                <div class="card mb-3">
                    <h3 class="card-header bg-success">@product.ProducName</h3>
                    <div class="card-body bg-light">
                        <h5 class="card-title">@product.ProducName</h5>


                        @if (product.ProductImage != null)
                        {


                            <img class="imag img-thumbnail" style="max-height:400px; max-width: 400px; display:block" src="data:image; base64,@Convert.ToBase64String(product.ProductImage)" />

                        }
                        else
                        {


                            <p class="text-danger">No image has been found</p>

                        }

                    </div>

                    <div class="card-body">
                        <p class="card-text">@product.ProductDescription</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Qty: @product.Qty  | Discount: @product.Discount | <text class="bg-primary" style="font-weight:bold;color:white">Price: $@product.Price</text></li>
                        <li class="list-group-item text-center">

                            @if (product.Qty > 0)
                            {
                                <a href="/Order/Create@produc.Id" class="btn btn-sm btn-success">Order Now</a>

                            }
                            else
                            {
                                <a href="/Order/Create@produc.Id" class="btn btn-sm btn-danger disabled"><text> Out of Order</text></a> 

                                }



                        </li>

                    </ul>

                </div>
            </div>







        }
    </div>


</div>
