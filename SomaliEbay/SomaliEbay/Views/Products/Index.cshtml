@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="height: 980px; margin-top: 20px;">

    <a href="/Products/Create">Add New Product</a>

    <div class="panel panel-primary">
        <div class="panel-heading">List Of Products</div>
        <div class="panel-body">

            <table class="table table-bordered table-condensed table-responsive table-hover table-striped" >
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Qty</td>
                    <td>Price</td>
                    <td>Discount</td>
                    <td>Image</td>
                    <td>Action</td>
                </tr>

                @foreach ( var Product in Model)
                {

                <tr>

                    <td>@Product.Id</td>
                    <td>@Product.ProducName</td>
                    <td>@Product.ProductDescription</td>
                    <td>@Product.Qty</td>
                    <td>@Product.Price</td>
                    <td>@Product.Discount</td>
                    <td>

                        @if (Product.ProductImage != null)
                        {


                            <img class="imag img-thumbnail" style ="max-height:75px; max-width: 100px;"src="data:image; base64,@Convert.ToBase64String(Product.ProductImage)"/>

                        }
                        else
                        {


                            <p class="text-danger">No image has been found</p>

                        }


                        </td>

                    <td>

                        <a class="btn btn-sm btn-primary" href="/Products/Edit/@Product.Id">Edit</a>  |

                        <a class="btn btn-sm btn-info" href="/Products/Details/@Product.Id">Details</a>  |

                        <a  class="btn btn-sm btn-danger" href="/Products/Delete/@Product.Id" onclick="return confirm('Are you sure you want to delete this products')">Delete</a>  |
                    </td>


                </tr>

                }
            </table>
        </div>
    </div>


</div>



